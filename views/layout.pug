include ../node_modules/jade-bootstrap/_bootstrap

head
  title= title
  script(src='/jquery/jquery.js')
  script(src='https://cdn.jsdelivr.net/npm/chart.js@2.8.0')
  script(src='/javascripts/data_charts.js')
  link(rel='stylesheet', href='/stylesheets/style.css')
body
  .container 
  nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') 
            img(src="/images/PalantiriLogo.png", alt="Logo" style='width:25px;hight:25px')
        
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href="/ranking") Rankings
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                | Teams 
                span.caret
              ul.dropdown-menu(role='menu')
                - if (teams)
                  each team in teams
                    li
                      - var url = '/teams/'+team.team_number
                      a(href=url) !{team.team_number}
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                | Matches 
                span.caret
              ul.dropdown-menu(role='menu')
                - if (matches)
                  each match in matches
                      li
                        - var url = '/matches/'+match.match_number
                        a(href=url) !{match.match_number}
            li
              a(href="/config") Configure
  h1(class='appName') Palantir 
  block content
  include footer