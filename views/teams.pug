extends layout

block content 
    h2= title
    p #{title} 
    table(class='resultsTable')
        each heading in headings
            th= heading
        each val in results
            tr
            each col in val 
                td(class='result')= col
    h3 Strengths and Weaknesses 
    div(class='strengthsCloud')
        ul 
            each stat,index in teamStats
                - if (index == 'team_number')
                    - 
                - else      
                    - if (stat > 60)
                        li(class='positive') + #{index}
                    - else if (stat < 20)
                        li(class='negative') - #{index}
    h3 Team #{team}'s Ranking Compared to other teams
    div(class="strengthsCloud")
        ul(class='percentileList')
            each stat,index in teamStats
                - if (index == 'team_number')
                    - 
                - else 
                    - var th = "th"
                    - if ((stat % 10) == 1)
                        - th = "st"
                    - else if (stat % 10 == 2)
                        - th = "nd"
                    - else if (stat % 10 == 3)
                        - th = "rd"
                    li #{index}: #{stat}#{th} percentile

